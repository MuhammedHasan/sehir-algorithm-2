mountain = [[1], [1, 2], [3, 5, 4], [2, 6, 7, 4]]

t_scores = [mountain[0]]


def bestRoute(mountain):
    for i in range(1, mountain):
        t_scores.append([0] * len(mountain[i]))
        for j, l in enumerate(mountain[i]):
            for n in [(i,j + 1), (i + 1, j + 1)]:
                 l + t_scores[i, j] >= t_scores[i + 1][j + 1]:
                    t_scores[i + 1][j + 1] = l + t_scores[i][j]
